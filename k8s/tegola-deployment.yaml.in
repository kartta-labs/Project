apiVersion: apps/v1
kind: Deployment
metadata:
  name: tegola
  labels:
    app: tegola
spec:
  replicas: 1
  selector:
    matchLabels:
      app: tegola
  strategy: 
    type: RollingUpdate
  minReadySeconds: 5
  template:
    metadata:
      labels:
        app: tegola
    spec:
      containers:
        - name: tegola
          image: gcr.io/${GCP_PROJECT_ID}/tegola-cb:latest
          imagePullPolicy: Always
          command: ["/bin/sh"]
          args: ["/container/config/tegola/launch"]
          #command: ["tail"]
          #args: ["-f", "/dev/null"]
          ports:
            - containerPort: 8088
          resources:
            limits:
              cpu: 1.5
            requests:
              cpu: 500m 
          livenessProbe:
            tcpSocket:
              port: 8088
            initialDelaySeconds: 120
            periodSeconds: 10
          readinessProbe:
            httpGet:
              path: /
              port: 8088
            initialDelaySeconds: 120
            periodSeconds: 10
            timeoutSeconds: 5
          volumeMounts:
            - name: container-tools
              mountPath: /container/tools
              readOnly: true
            - name: container-config-tegola
              mountPath: container/config/tegola
              readOnly: true
            - name: container-secrets
              mountPath: /container/secrets
              readOnly: true
      volumes:
        - name: container-tools
          configMap:
            name: container-tools
        - name: container-config-tegola
          configMap:
            name: container-config-tegola
        - name: container-secrets
          secret:
            secretName: container-secrets
