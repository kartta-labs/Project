apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: noter-backend
  labels:
    app: noter-backend
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: noter-backend
    spec:
      containers:
        - image: gcr.io/${GCP_PROJECT_ID}/noter-backend:latest
          name: noter-backend
          command: ["/bin/bash"]
          args: ["/container/config/noter-backend/launch-k8s"]
          ports:
            - containerPort: ${NOTER_BACKEND_PORT}
          volumeMounts:
          - name: container-tools
            mountPath: /container/tools
            readOnly: true
          - name: container-config-noter-backend
            mountPath: container/config/noter-backend
            readOnly: true
          - name: container-secrets
            mountPath: /container/secrets
            readOnly: true
      volumes:
      - name: container-tools
        configMap:
          name: container-tools
      - name: container-config-noter-backend
        configMap:
          name: container-config-noter-backend
      - name: container-secrets
        secret:
          secretName: container-secrets
